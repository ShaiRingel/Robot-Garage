<Page x:Class="Robot_Garage.ProductUploadPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
      xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Product Upload">

    <!-- Resources for consistent styling -->
    <Page.Resources>
        <!-- Soft card shadow -->
        <DropShadowEffect x:Key="CardShadow" BlurRadius="10" ShadowDepth="2" Opacity="0.5"/>

        <!-- Primary button style -->
        <!-- Primary button style -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource DarkBlueBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="5"/>
            <!-- Increased border thickness -->
            <Setter Property="BorderBrush" Value="{StaticResource DarkBlueBrush}"/>
            <!-- Added border color -->
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <DockPanel Grid.Row="0" LastChildFill="True" Margin="0,0,0,10">
            <Button DockPanel.Dock="Left" Click="BackButton_Click" Background="Transparent" BorderBrush="Transparent"
                    Padding="8" ToolTip="Back" Cursor="Hand">
                <svgc:SvgViewbox Source="/assets/images/LeftArrow.svg" Height="20"/>
            </Button>
            <TextBlock Text="Upload Product" FontSize="32" FontWeight="Bold" VerticalAlignment="Center" Foreground="White"/>
        </DockPanel>

        <!-- Content Card -->
        <Border Grid.Row="1" Background="#2D2D30" CornerRadius="10" Padding="20" Effect="{StaticResource CardShadow}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Product Name -->
                <Label Grid.Row="0" Grid.Column="0" Content="Name:" FontSize="14" VerticalAlignment="Center" Margin="0,0,10,10" Foreground="White"/>
                <TextBox Grid.Row="0" Grid.Column="1" x:Name="txtName" Margin="0,0,0,10" FontSize="14" Padding="8" Background="#3E3E42" Foreground="White" BorderBrush="#555"/>

                <!-- Description -->
                <Label Grid.Row="1" Grid.Column="0" Content="Description:" FontSize="14" VerticalAlignment="Top" Margin="0,0,10,10" Foreground="White"/>
                <TextBox Grid.Row="1" Grid.Column="1" x:Name="txtDescription" AcceptsReturn="True" TextWrapping="Wrap"
                         Height="100" Margin="0,0,0,10" FontSize="14" Padding="8" Background="#3E3E42" Foreground="White" BorderBrush="#555"/>

                <!-- Price -->
                <Label Grid.Row="2" Grid.Column="0" Content="Price (₪):" FontSize="14" VerticalAlignment="Center" Margin="0,0,10,10" Foreground="White"/>
                <xctk:IntegerUpDown Grid.Row="2" Grid.Column="1" x:Name="txtPrice" Margin="0,0,0,10" FontSize="14" Padding="4"
                                     Background="#3E3E42" Foreground="White" BorderBrush="#555" PreviewTextInput="txtPrice_PreviewTextInput"/>

                <!-- Condition -->
                <Label Grid.Row="3" Grid.Column="0" Content="Condition:" FontSize="14" VerticalAlignment="Center" Margin="0,0,10,10" Foreground="White"/>
                <xctk:DropDownButton Grid.Row="3" Grid.Column="1" x:Name="txtCondition" Margin="0,0,0,10"
                                     Content="Select Condition" Padding="8" Click="txtCondition_Click" Background="#3E3E42" Foreground="White">
                    <xctk:DropDownButton.DropDownContent>
                        <ListBox x:Name="ConditionListBox" Visibility="Collapsed" SelectionChanged="ConditionListBox_SelectionChanged">
                            <!-- Items will be populated dynamically -->
                        </ListBox>
                    </xctk:DropDownButton.DropDownContent>
                </xctk:DropDownButton>

                <!-- Category -->
                <Label Grid.Row="4" Grid.Column="0" Content="Category:" FontSize="14" VerticalAlignment="Center" Margin="0,0,10,10" Foreground="White"/>
                <xctk:DropDownButton Grid.Row="4" Grid.Column="1" x:Name="txtCategory" Margin="0,0,0,10"
                                     Content="Select Category" Padding="8" Click="txtCategory_Click" Background="#3E3E42" Foreground="White">
                    <xctk:DropDownButton.DropDownContent>
                        <ListBox x:Name="CategoryListBox" Visibility="Collapsed" SelectionChanged="CategoryListBox_SelectionChanged">
                            <!-- Items will be populated dynamically -->
                        </ListBox>
                    </xctk:DropDownButton.DropDownContent>
                </xctk:DropDownButton>

                <!-- Image Upload -->
                <Label Grid.Row="5" Grid.Column="0" Content="Product Image:" FontSize="14" VerticalAlignment="Center" Margin="0,0,10,10" Foreground="White"/>
                <StackPanel Grid.Row="5" Grid.Column="1" Orientation="Horizontal" Margin="0,0,0,10">
                    <Button x:Name="ImgButton" Height="30" Content="Browse" Click="SelectImage_Click" Style="{StaticResource PrimaryButtonStyle}"/>
                    <TextBlock x:Name="txtImagePath" Text="No file chosen" Foreground="Gray" VerticalAlignment="Center" Margin="10,0,0,0"/>
                </StackPanel>

                <!-- Submit Button -->
                <StackPanel Grid.Row="7" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                    <TextBlock x:Name="txtSuccess" Foreground="LightGreen" FontSize="14" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <Button Content="Upload" Click="Upload_Click" Style="{StaticResource PrimaryButtonStyle}"/>
                </StackPanel>

            </Grid>
        </Border>
    </Grid>
</Page>
