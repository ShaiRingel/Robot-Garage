<Page x:Class="Robot_Garage.Pages.PaymentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Robot_Garage.Pages" xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
      xmlns:sys="clr-namespace:System;assembly=mscorlib" xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PaymentPage">

    <Page.Resources>
        <DropShadowEffect x:Key="CardShadow" Color="#000000" BlurRadius="10" ShadowDepth="2" Opacity="0.4"/>
        <Style x:Key="PayButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource DarkBlueBrush}"/>
            <Setter Property="Content" Value="Pay Now"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Opacity" Value="1"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Width" Value="125"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" BlurRadius="5" ShadowDepth="2" Opacity="0.5"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Viewbox Stretch="UniformToFill">
                <DockPanel Background="{StaticResource DarkBlueBrush}" Width="800" Height="45">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left">
                        <Button Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="12, 0, 5, 0" 
Background="Transparent" BorderBrush="Transparent" Height="25" Width="25"
Click="BackButton_Click" Style="{StaticResource ArrowButtonStyle}">
                            <svgc:SvgViewbox Source="/assets/images/LeftArrow.svg" Height="18" />
                        </Button>
                        <Label Content="Payment" FontSize="24" FontWeight="ExtraBold" VerticalAlignment="Center"/>
                    </StackPanel>
                </DockPanel>
            </Viewbox>

            <Border Grid.Row="1" Margin="20" Background="{StaticResource ControlBackgroundBrush}" CornerRadius="16" Padding="20" Effect="{StaticResource CardShadow}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <!-- Payment Form -->
                    <Viewbox Stretch="UniformToFill">
                        <StackPanel Grid.Column="0" Margin="0,0,20,0" Width="360" Height="345">
                            <TextBlock Text="Payment Details" FontSize="22" FontWeight="Bold" Foreground="White" Margin="0,0,0,20"/>

                            <TextBlock Text="Cardholder Name" Foreground="White"/>
                            <TextBox x:Name="CardholderNameTextBox" Margin="0,5,0,10"/>

                            <TextBlock Text="Card Number" Foreground="White"/>
                            <xctk:MaskedTextBox
                                x:Name="CardNumberMaskedTextBox"
                                Mask="0000 0000 0000 0000"
                                PromptChar="_"
                                Margin="0,5,0,10"
                                Background="{x:Null}"
                                BorderBrush="{x:Null}"
                                Foreground="White"
                                FontSize="14"
                                FontFamily="Rubik"
                                ValueDataType="{x:Type sys:Int32}"
                                PreviewMouseLeftButtonDown="MaskedTextBox_PreviewMouseDown"
                                GotKeyboardFocus="MaskedTextBox_GotKeyboardFocus"/>

                            <StackPanel Orientation="Horizontal">
                                <StackPanel Width="150">
                                    <TextBlock Text="Expiration (MM/YY)" Foreground="White"/>
                                    <xctk:MaskedTextBox
                                        x:Name="ExpirationMaskedTextBox"
                                        Mask="00/00"
                                        PromptChar="_"
                                        Margin="0,5,0,10"
                                        Background="{x:Null}"
                                        BorderBrush="{x:Null}"
                                        Foreground="White"
                                        FontSize="14"
                                        FontFamily="Rubik"
                                        ValueDataType="{x:Type sys:Int32}"
                                        PreviewMouseLeftButtonDown="MaskedTextBox_PreviewMouseDown"
                                        GotKeyboardFocus="MaskedTextBox_GotKeyboardFocus"/>

                                </StackPanel>
                                <StackPanel Width="100" Margin="20,0,0,0">
                                    <TextBlock Text="CVV" Foreground="White"/>
                                    <PasswordBox x:Name="CvvPasswordBox" Margin="0,5,0,10" MaxLength="4" PreviewTextInput="NumericOnly"/>
                                </StackPanel>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal">
                                <StackPanel Width="225">
                                    <TextBlock Text="Billing Address" Foreground="White"/>
                                    <TextBox x:Name="BillingAddressTextBox" AcceptsReturn="True" Margin="0,5,0,10"/>
                                </StackPanel>
                                <StackPanel Width="115" Margin="20,0,0,0">
                                    <TextBlock Text="Postal Code" Foreground="White"/>
                                    <TextBox x:Name="PostalCodeTextBox" Margin="0,5,0,10" PreviewTextInput="NumericOnly"/>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </Viewbox>

                    <!-- Order Summary -->
                    <Viewbox Grid.Column="1" Stretch="UniformToFill">
                        <StackPanel Width="360" Height="345">
                            <TextBlock Text="Order Summary" FontSize="22" FontWeight="Bold" Foreground="White" Margin="0,0,0,20"/>

                            <ItemsControl x:Name="OrderItemsControl">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                            <Image Source="{Binding Image}" Width="50" Height="50" Stretch="UniformToFill" Margin="0,0,10,0"/>
                                            <StackPanel Orientation="Vertical">
                                                <TextBlock Text="{Binding Name}" FontWeight="Bold" Foreground="White"/>
                                                <TextBlock Text="{Binding Price, StringFormat='{}₪{0}'}" FontWeight="SemiBold" Foreground="White"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <Separator Margin="0,10"/>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <TextBlock Text="Total:" FontWeight="Bold" Margin="0,0,10,0" Foreground="White"/>
                                <TextBlock x:Name="TotalAmountTextBlock" FontSize="16" FontWeight="Bold" Foreground="White"/>
                            </StackPanel>

                            <Button x:Name="btnPay" VerticalAlignment="Bottom" HorizontalAlignment="Center" Style="{StaticResource PayButtonStyle}"
            Click="PayButton_Click" Margin="0,30,0,0"/>
                        </StackPanel>
                    </Viewbox>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Page>