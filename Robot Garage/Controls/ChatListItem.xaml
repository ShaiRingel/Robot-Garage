<UserControl x:Class="Robot_Garage.Controls.ChatListItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Robot_Garage.Controls"
             mc:Ignorable="d" 
             Height="Auto" Width="Auto">
    <Border Background="{StaticResource DarkGrayBrush}"
            Padding="5"
            Margin="5">
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="{Binding ChatName}"
                       FontWeight="Bold"
                       Margin="5,0,10,0"/>
            <TextBlock Text="{Binding LastMessage}"
                       Foreground="{StaticResource DarkGrayBrush}"
                       Margin="5,0,10,0"/>
            <TextBlock Text="{Binding LastMessageTime}"
                       Foreground="{StaticResource LightGrayBrush}"
                       HorizontalAlignment="Right"
                       Margin="5,0,0,0"/>
        </StackPanel>
    </Border>
</UserControl>
